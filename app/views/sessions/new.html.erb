<%= form_tag '/login', class: "form-signin" do %>
<h4 class="form-signin-heading">Please log in</h4>
<%= text_field_tag :name, '', placeholder: 'Username', autofocus: true, class:'form-control' %>
<%= password_field_tag :password, '', placeholder: 'Password', class: 'form-control' %>
<%= submit_tag "Submit", class: "btn btn-lg btn-primary btn-block" %>
<% end %>
